@model IEnumerable<OrdenDeCompra>

@if (Model is not null)
{
    <div class="table-responsive-lg">
        <table id="tablaOrdenDeCompra" class="table table-striped table-hover align-middle mt-3">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Número de Orden</th>
                    <th scope="col">Proveedor</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Monto</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (OrdenDeCompra orden in Model)
                {
                    <tr>
                        <td>@orden.Id</td>
                        <td>@orden.NumeroDeOrden</td>
                        <td>@orden.Proveedor</td>
                        <td>@orden.Fecha</td>
                        <td>$@orden.MontoTotal</td>
                        <td class="text-center">
                            <a href="/OrdenDeCompra/Edit/@orden.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a href="/OrdenDeCompra/Delete/@orden.Id" class="btn btn-sm btn-danger ms-1">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
